    lcog   = cog of lipids; \
    zl     = z of lcog;     \
                            \
    dyn_mol_cog of resname CLA and ( (z+1.5) > zl and (z-1.5) < zl ) and radius < 1.5;'
   ;;
  *)
    echo select : ${1} is not a valid case
    ;;
esac
