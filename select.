    wcog   = cog of resname TIP3 and ( (z+.45)>zm and (z-.45)<zm ); \
    xw     = x of wcog; \
    yw     = y of wcog; \
    zw     = z of wcog; \
    radius = ((x-xw)^2+(y-yw)^2)^0.5; \
    lipids = resname "DOPC" and resid > 9999 and radius < 1.5; \
    lcog   = cog of lipids; \
    zl     = z of lcog;     \
